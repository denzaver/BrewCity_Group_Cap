@model IEnumerable<BREWCITY.Models.Beer>

@{
    ViewData["Title"] = "FilterBeers";
}

<h1>FilterBeers</h1>

<p>
    @using (Html.BeginForm())
    {
        <select name="type" asp-items="@ViewBag.Type"></select>
        <select name="breweryName" asp-items="@ViewBag.Brewery"></select>
        <input type="submit" value="Search" />
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BeerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BeerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="AddToCart" asp-route-id="@item.BeerId">Add to Cart</a> |
                <a asp-action="CreateReview" asp-route-id="@item.BeerId">Add Review</a> |
                <a asp-action="SeeReviews" asp-route-id="@item.BeerId">See Reviews</a>
            </td>
        </tr>
}
    </tbody>
</table>
