@model IEnumerable<BREWCITY.Models.Review>

@{
    ViewData["Title"] = "MyReviews";
}

<h1>MyReviews</h1>

<p>
    <a asp-action="Index">Home</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            
            <td>
                <a asp-action="EditReview" asp-route-id="@item.ReviewId">Edit</a> |
                <a asp-action="DeleteReview" asp-route-id="@item.ReviewId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
