@model BREWCITY.ViewModels.ShoppingCartIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            <th>Selected Amount</th>
            <th>BEER</th>
            <th class="text-right">PRICE</th>
            <th class="text-right">SUBTOTAL</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-left"><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-candyId="@item.Beer.BeerId" alt="">Decrease Amount</a></td>
                <td class="text-center">@item.Amount</td>
                <td class="text-left">@item.Beer.BeerId</td>
                <td class="text-right">@item.Beer.Price.ToString("c")</td>
                <td class="text-right">@((item.Amount * item.Beer.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Clear Cart</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>
